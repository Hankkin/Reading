<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    app:cardCornerRadius="@dimen/dp_6"
    app:cardElevation="1dp">

    <LinearLayout
        android:padding="@dimen/dp_10"
        android:id="@+id/ll_gank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_adapter_gank_author"
                style="@style/greyTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.bilibili.magicasakura.widgets.TintTextView
                android:id="@+id/tv_adapter_wx_chapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/theme_color_primary"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_adapter_gank_title"
            style="@style/normalTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6" />

        <com.howshea.basemodule.component.viewGroup.NineGridImageLayout
            android:layout_marginTop="@dimen/dp_6"
            android:id="@+id/img_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6">

            <com.bilibili.magicasakura.widgets.TintTextView
                android:textColor="@color/theme_color_primary"
                android:id="@+id/tv_adapter_gank_type"
                style="@style/greyTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tv_adapter_gank_time"
                style="@style/greyTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>